<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.reo.running.yumemitask.screen.history.HistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/historyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/historyTitle"
            android:textSize="24sp"
            android:textColor="@color/teal_200"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ScrollView
            android:id="@+id/historyScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/historyText"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/firstHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fjadkaj"
                    android:textSize="24sp"
                    android:textColor="@color/teal_200"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/secondHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fjaljdf"
                    android:textSize="24sp"
                    android:textColor="@color/teal_200"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@id/firstHistory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/thirdHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jfakj;akda"
                    android:textSize="24sp"
                    android:textColor="@color/teal_200"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@id/secondHistory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/fourthHistroy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jfakj;akda"
                    android:textSize="24sp"
                    android:textColor="@color/teal_200"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@id/thirdHistory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/fifthHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jfakj;akda"
                    android:textSize="24sp"
                    android:textColor="@color/teal_200"
                    android:layout_marginTop="80dp"
                    app:layout_constraintTop_toBottomOf="@id/fourthHistroy"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>